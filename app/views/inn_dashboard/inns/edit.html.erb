<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'GestÃ£o de Pousadas', inn_management_path %></li>
    <li class="breadcrumb-item"><%= @inn.name %></li>
    <li class="breadcrumb-item active" aria-current="page">Editar</li>
  </ol>
</nav>
<h2>Editar Pousada</h2>
<% unless @inn.valid? %>
  <span>Continue o cadastro de sua pousada...</span>
<% end %>
<%= render partial: 'shared/record_errors', locals: { record: @inn } %>
<%= form_with(model: @inn, url: inn_dashboard_inns_path) do |f| %>
  <div class="">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="">
    <%= f.label :registration_number, class: 'form-label' %>
    <%= f.text_field :registration_number, class: 'form-control' %>
  </div>
  <div class="">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <%= f.fields_for :address, @inn.address do |address_form| %>
    <div class="">
      <%= address_form.label :postal_code, class: 'form-label' %>
      <%= address_form.text_field :postal_code, class: 'form-control' %>
    </div>
    <div class="">
      <%= address_form.label :address, class: 'form-label' %>
      <%= address_form.text_field :address, class: 'form-control' %>
    </div>
    <div class="">
      <%= address_form.label :number, class: 'form-label' %>
      <%= address_form.text_field :number, class: 'form-control' %>
    </div>
    <div class="">
      <%= address_form.label :neighborhood, class: 'form-label' %>
      <%= address_form.text_field :neighborhood, class: 'form-control' %>
    </div>
    <div class="">
      <%= address_form.label :city, class: 'form-label' %>
      <%= address_form.text_field :city, class: 'form-control' %>
    </div>
    <div class="">
      <%= address_form.label :state, class: 'form-label' %>
      <%= address_form.select :state, options_for_select(Address::STATES), {}, class: "form-select" %>
    </div>
  <% end %>
  <%= f.submit class: 'btn btn-success mt-3' %>
<% end %>