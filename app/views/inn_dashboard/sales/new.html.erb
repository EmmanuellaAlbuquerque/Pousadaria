<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'Gestão de Pousadas', inn_management_path %></li>
    <li class="breadcrumb-item"><%= @inn.name %></li>
    <li class="breadcrumb-item">Promções</li>
    <li class="breadcrumb-item active" aria-current="page">Nova Promoção</li>
  </ol>
</nav>
<h1>Nova Promoção</h1>
<%= render partial: 'shared/record_errors', locals: { record: @sale } %>
<%= form_with(model: @sale, url: inn_dashboard_inns_sales_path) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :start_date, class: "form-label" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :end_date, class: "form-label"  %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :inn_room_id, class: "form-label"  %>
    <%= f.collection_select :inn_room_id, @inn_rooms, :id, :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :discount_percentage, class: "form-label"  %>
    <%= f.number_field :discount_percentage, class: "form-control" %>
  </div>
  <%= f.submit class: 'btn btn-success' %>
<% end %>